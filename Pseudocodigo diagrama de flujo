# Pseudoc√≥digo del Juego de Serpiente

Algoritmo Principal
Algoritmo JuegoSerpiente:
    Inicializar juego_iniciado = Falso
    Inicializar juego_terminado = Falso
    Inicializar puntuacion = 0
    Inicializar longitud_serpiente = 1
    
    Repeat:
        MostrarMenu()
        
        If TeclaPresionada() == 'Inicio' Then:
            juego_iniciado = Verdadero
            IniciarJuego()
        EndIf
        
        While juego_iniciado AND NOT juego_terminado Do:
            MoverSerpiente()
            
            If VerificarColisionBordes() OR VerificarColisionCuerpo() Then:
                juego_terminado = Verdadero
                MostrarGameOver()
            Else:
                If VerificarComidaPresente() Then:
                    SerpienteCome()
                    puntuacion += 10
                    longitud_serpiente += 1
                    GenerarComidaAleatoria()
                EndIf
            EndIf
        EndWhile
        
    Until TeclaPresionada() == 'Salir'
EndAlgorithm

