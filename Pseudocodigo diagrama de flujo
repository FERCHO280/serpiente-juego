INICIO

MOSTRAR_MENU()

SI jugador_presiona_Iniciar juego ENTONCES
    INICIAR_JUEGO()
    
    REPETIR
        MOVER_SERPIENTE()

        SI NO HAY_COMIDA() ENTONCES
            GENERAR_COMIDA_ALEATORIA()
        FIN_SI

        SI SERPIENTE_COME() ENTONCES
            AUMENTAR_PUNTUACION()
            AUMENTAR_LONGITUD()
        FIN_SI

        SI COLISION_CON_BORDES_O_CUERPO() ENTONCES
            GAME_OVER()

            SI REINICIAR() = VERDADERO ENTONCES
                INICIAR_JUEGO()
            SINO
                SALIR
            FIN_SI
        FIN_SI

    HASTA QUE jugador_decida_salir
FIN_SI

FIN

